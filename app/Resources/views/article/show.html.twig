{% extends 'base.html.twig' %}

{% block body %}
    <form action="{{ path('article_index') }}" method="GET">
        <div>
            <button type="submit" class="btn btn-warning">Back to the list</button>
        </div>
    </form>

    <table class="table table-bordered">
        <h1>Article</h1>

        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ article.name }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ article.categoryId.name}}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if article.createdAt %}{{ article.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th>Fileid</th>
                <td>{{ article.fileId }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ article.status }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ article.username.username }}</td>
            </tr>
        </tbody>
    </table>

        <form action="{{ path('article_edit', {'id': article.id}) }}">
            <button class="btn btn-info">Edit</button>
        </form>
            {{ form_start(delete_form) }}
                <input class="btn btn-info" type="submit" value="Delete">
            {{ form_end(delete_form) }}

{% endblock %}
